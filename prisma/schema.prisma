generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Articles {
  productId   Int    @id @default(autoincrement())
  productName String
  description String
  price       Float
  stock       Int
}

model Commande {
  commandeId  Int    @id @default(autoincrement())
  productId   Int
  productName String
}

model User {
  userId       Int    @id @default(autoincrement())
  username     String
  email        String @unique
  passwordHash String
  role         Role
}

model Categorie {
  codeCategorie        Int    @id @default(autoincrement())
  designationCategorie String
}

model Panier {
  panierId Int @id @default(autoincrement())
  userId   Int
  quantite Int
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}
